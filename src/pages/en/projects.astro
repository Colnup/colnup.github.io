---
const title = "Projects"
const subtitle = "Recent projects I've been working on."

import Layout from "../../layouts/en/Layout.astro"

import HeaderSmall from "../../components/HeaderSmall.astro"
import ProjectCard from "../../components/en/ProjectCards.astro"
import data from "../../data/site_en.json"

type Props = {
  projectTitle: string
  href: string
  body: string
  image: string
  type?: string
  repo?: string
}
---

<Layout title="Projects">
  <main>
    <HeaderSmall title={title} subtitle={subtitle} />
    <div class="">
      <section class="section">
        <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16">
          <div class="grid md:grid-cols-2 sm:grid-cols-1 gap-8">
            {
              data.projects.map(
                (
                  value: {
                    projectTitle: string
                    href: string
                    about: string
                    image: string
                    repo?: string
                    type?: string
                  },
                  index: number,
                ) => {
                  return (
                    <ProjectCard
                      projectTitle={value.projectTitle}
                      href={value.href}
                      body={value.about}
                      image={value.image}
                      type={value.type}
                      repo={value.repo}
                    />
                  )
                },
              )
            }
          </div>
        </div>
      </section>
    </div>
  </main>
</Layout>
